<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.placeforme.ShowEventoActivity" >
	
    
    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:layout_margin="10sp"
        android:background="@drawable/evento_head_shape">
    
	    <TextView android:id="@+id/evento_usuario" 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:padding="5sp"
	        android:shadowRadius="2"
	        android:shadowColor="#CCC"
	       	android:shadowDx="2"
	       	android:shadowDy="2"/>
            
        <TextView android:id="@+id/evento_data" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="5sp"
	        android:shadowRadius="2"
	        android:shadowColor="#CCC"
	       	android:shadowDx="2"
	       	android:shadowDy="2" />
        
        
        <TextView android:id="@+id/evento_horario" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="5sp"
	        android:shadowRadius="2"
	        android:shadowColor="#CCC"
	       	android:shadowDx="2"
	       	android:shadowDy="2" />
        
    </LinearLayout>
    
    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/evento_head_shape">
    
	    <ListView android:id="@+id/evento_atributos"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"></ListView>
        
    </LinearLayout>
    
    
    
</LinearLayout>
